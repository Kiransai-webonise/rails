<table>
  <tr>
    <th>Ttile</th>
    <th>Body</th>
    <th>Status</th>
    <th></th>
  </tr>
  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %><input type="hidden" class="blog_id" name="blog_id" value=<%= blog.id %>/></td>
      <td><%= blog.body %></td>
      <td><%= select('blog', 'status', options_for_select([['Publish', 1], ['Unpublish', 0]], blog.status)) %></td>
      <td><%= link_to 'Edit', edit_blog_path(blog.id) %><%= link_to 'Show', blog_path(blog.id) %><%= button_to 'Delete', blog_path(blog.id), method: :delete %></td>
    </tr>
  <% end %>
</table>
<% content_for :javascript_includes do %>
  <%= javascript_include_tag "common.js" %>
<% end %>