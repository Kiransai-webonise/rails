<h1><%= @blog.title %></h1>

<p><%= @blog.body %></p>

<ul>
  <li><%= link_to "Edit", edit_blog_path(@blog.id) %></li>
  <li><%= link_to "Destroy", blog_path(@blog.id), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Comments</h2>
<%= render :partial => 'partials/comment_view', locals: { blog: @blog } %>

<h2>Add a comment:</h2>
<%= render :partial => 'partials/comments_form', locals: { blog: @blog } %>
